<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/two_pane_linear_layout">

    <fragment
        android:id="@+id/master_list_fragment_two_pane"
        android:name="com.example.android.android_me.ui.MasterListFragment"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#a9a0a0"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/android_me_linear_layout_two_pane"
        android:background="#fff"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/head_container_two_pane"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:id="@+id/body_container_two_pane"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:id="@+id/leg_container_two_pane"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</LinearLayout>